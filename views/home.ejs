<!DOCTYPE html>
<html lang="en">

  <head>
    <title> cookie store </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>

  <body>
    <header class="UpperBar">
      <form method="get" action="https://localhost:1024">
        <button class="logo">
          cookie store
        </button>
      </form>
      <div class="right-section">
        <a class="username"> <%= username %> </a> 
        <form method="get" action="https://localhost:1024/cart">
            <button class="logo">
              cart
            </button>
        </form>
        <% if(logged === true){ %>
        <% } %>
        <% if(admin === true){ %>
          <form method="get" action="https://localhost:1024/manage">
            <button class="logo">
              manage
            </button>
          </form>
        <% } %>
        <form method="get" action="https://localhost:1024/login">
          <button class="logo">
            login
          </button>
        </form>
        <form method="get" action="https://localhost:1024/logout">
          <button class="logo">
            logout
          </button>
        </form>
      </div>
    </header>
    <div></div>
    <div class="products">
      <% for(const product of products){ %>
        <form method="post" action="/?id=<%=product.id%>">
          <button class="card">
            <div class="text"><%= product.name %></div>
            <div class="price"><%= product.price %>$</div>
          </button>
        </form>
      <% } %>
      
    </div>
  </body>
</html>